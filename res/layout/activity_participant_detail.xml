<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/fragment_participant_detail"
        android:name="ch.bfh.adhocnetwork.ParticipantDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:context=".NetworkActiveActivity" />

    <fragment
        android:id="@+id/fragment_message_sendl"
        android:name="ch.bfh.adhocnetwork.MessageSendFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>