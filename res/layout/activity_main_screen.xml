<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2" >

    <Button
        android:id="@+id/btn_connect_infrastructure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Create Network with existing infrastructure" />

    <Button
        android:id="@+id/btn_join_network"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_connect_infrastructure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:alpha="255"
        android:background="@android:color/holo_blue_light"
        android:drawableLeft="@drawable/ic_add_user"
        android:paddingLeft="0dip"
        android:text="Join Existing Network"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_create_hotspot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_connect_infrastructure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Create new Hotspot" />

</RelativeLayout>