<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ElectionInfoActivity" >

    <TextView
        android:id="@+id/question_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_info" />

    <EditText
        android:id="@+id/question"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_info"
        android:hint="@string/question"
        android:inputType="text" >

        <requestFocus />
    </EditText>
    
    <View
            android:id="@+id/election_info_view_space_1"
            android:layout_width="fill_parent"
            android:layout_height="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/possible_responses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:text="@string/possible_responses"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/add_candidate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/add"
            android:src="@drawable/plus_green"
            android:layout_centerVertical="true"  />

    </RelativeLayout>
    
    <View
            android:id="@+id/election_info_view_space_2"
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/possible_responses"
        android:layout_weight="1"
        android:gravity="center_vertical" >
    </ListView>

    <!--
         <Button
        android:id="@+id/add_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@android:id/list"
        android:gravity="center_vertical"
        android:text="@string/add" />
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <Button
            android:id="@+id/cancel_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/add_candidate"
            android:gravity="center_vertical"
            android:text="@string/ev_cancel" />

        <Button
            android:id="@+id/start_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_candidate"
            android:layout_toRightOf="@id/cancel_button"
            android:gravity="center_vertical"
            android:text="@string/save" />
    </RelativeLayout>

</LinearLayout>